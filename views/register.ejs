<%- include('parts/header') %>
<%- include('parts/navbar') %>

<!-- Page Header -->
<section id="reg" class="pt-5 ">
  <div class="container">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10 register p-4 shadow">
        <% if(authError){ %>
        <br>
        <p class="alert alert-danger">
          <%= authError %>
        </p>
        <% } %>
        <div class="borderHover">
          <h2 id="heading" class=" mt-3 text-center">Create A New Account</h2>
          <div class="hBorder m-auto"></div>
        </div>

        <form action="/auth/register" method="POST" class="mt-4 px-4">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <input type="text" name="firstname" placeholder="Firstname" class="form-control">
              <!-- Error message for firstname-->
            </div>
            <% let firstnameError = validationErrors.find(err => err.param === 'firstname') %>
            <% if(firstnameError) {%>
            <p class="alert alert-danger mt-2">
              <%= firstnameError.msg %>
            </p>
            <% } %>
          </div>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <input type="text" name="lastname" placeholder="Lastname" class="form-control">
              <!-- Error message for lastname-->
            </div>
            <% let lastnameError = validationErrors.find(err => err.param === 'lastname') %>
            <% if(lastnameError) {%>
            <p class="alert alert-danger mt-2">
              <%= lastnameError.msg %>
            </p>
            <% } %>
          </div>

          <div class="control-group">
            <div class="form-group floating-label-form-group controls ">
              <input type="email" name="email" placeholder="Email" class="form-control">
              <!-- Error message for email-->
            </div>
            <% let emailError = validationErrors.find(err => err.param === 'email') %>
            <% if(emailError) {%>
            <p class="alert alert-danger mt-2">
              <%= emailError.msg %>
            </p>
            <% } %>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <!-- Error message for password-->
            <% let passwordError = validationErrors.find(err => err.param === 'password') %>
            <% if(passwordError) {%>
            <p class="alert alert-danger mt-2">
              <%= passwordError.msg %>
            </p>
            <% } %>
          </div>

          <div class="form-group my-4 text-center">
            <button class="btn  btn-outline btn-lg rounded-0">Register Now </button>
          </div>

          <div class="text-center mt-3 ask">
            Already have account ? <a href="/auth/login">Login</a>
          </div>

        </form>
      </div>
      <div class="col-md-1"></div>
    </div>

  </div>
</section>

<%- include('parts/footer') %>